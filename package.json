{
  "name": "hot-packets",
  "version": "1.0.0",
  "description": "Email like information sharing",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aydoun/hot-packets"
  },
  "keywords": [
    "TypeScript",
    "express",
    "nodejs",
    "boilerplate"
  ],
  "author": "Mohamed Amine Aydoun",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dockerize": "./scripts/dev.sh",
